{
  "name": "glovo-favorites-chrome-extension",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "dev": "watch 'pnpm build' ./src-service-worker ./src-glovo-web ./src-extension-popup ./types",
    "build": "run-p type-check lint build-popup build-worker build-web ",
    "build-web": "pnpm vite build --config vite.config.glovo-web.ts",
    "build-worker": "pnpm vite build --config vite.config.service-worker.ts",
    "build-popup": "pnpm vite build --config vite.config.extension.popup.ts",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts  --ignore-path .gitignore"
  },
  "dependencies": {
    "debounce": "^2.0.0",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/chrome": "^0.0.251",
    "@types/node": "^18.18.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.49.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.18.1",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.0.3",
    "typescript": "~5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-static-copy": "^0.17.1",
    "vue-tsc": "^1.8.19",
    "watch": "^1.0.2"
  }
}
